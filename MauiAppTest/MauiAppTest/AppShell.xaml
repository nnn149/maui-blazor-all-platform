<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MauiAppTest.View"
    xmlns:mytask="clr-namespace:MauiAppTest.View.MyTask"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <Tab Title="Main">
            <ShellContent ContentTemplate="{DataTemplate mytask:MainPage}"/>
        </Tab>

        <Tab Title="Blazor">
            <ShellContent ContentTemplate="{DataTemplate view:BlazorPage}"/>
        </Tab>
    </TabBar>

</Shell>
